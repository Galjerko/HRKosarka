@page "/"

<PageTitle>HRKošarka</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="dashboard-container">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true" Class="dashboard-title">
        Welcome to Basketball Management System
    </MudText>

    <MudText Typo="Typo.h6" Align="Align.Center" Class="dashboard-subtitle mb-6">
        Explore Croatian basketball clubs, teams, and matches
    </MudText>

    <MudGrid Spacing="3">
        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="dashboard-card card-primary">
                <MudCardContent>
                    <div class="dashboard-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Large" Color="Color.Primary" />
                    </div>
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="text-primary">Clubs</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Class="text-secondary">Browse basketball clubs across Croatia</MudText>
                </MudCardContent>
                <MudCardActions Class="dashboard-actions">
                    <MudButton Href="/clubs" Color="Color.Primary" Variant="Variant.Filled">View Clubs</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="dashboard-card card-secondary">
                <MudCardContent>
                    <div class="dashboard-icon">
                        <MudIcon Icon="@Icons.Material.Filled.Groups" Size="Size.Large" Color="Color.Secondary" />
                    </div>
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="text-primary">Teams</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Class="text-secondary">Discover teams and their rosters</MudText>
                </MudCardContent>
                <MudCardActions Class="dashboard-actions">
                    <MudButton Href="/teams" Color="Color.Secondary" Variant="Variant.Filled">View Teams</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="dashboard-card card-tertiary">
                <MudCardContent>
                    <div class="dashboard-icon">
                        <MudIcon Icon="@Icons.Material.Filled.SportsBasketball" Size="Size.Large" Color="Color.Tertiary" />
                    </div>
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="text-primary">Matches</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Class="text-secondary">Check match schedules and results</MudText>
                </MudCardContent>
                <MudCardActions Class="dashboard-actions">
                    <MudButton Href="/matches" Color="Color.Tertiary" Variant="Variant.Filled">View Matches</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Class="dashboard-card card-success">
                <MudCardContent>
                    <div class="dashboard-icon">
                        <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Large" Color="Color.Success" />
                    </div>
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="text-primary">Leagues</MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Class="text-secondary">Follow league standings and tournaments</MudText>
                </MudCardContent>
                <MudCardActions Class="dashboard-actions">
                    <MudButton Href="/leagues" Color="Color.Success" Variant="Variant.Filled">View Leagues</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
