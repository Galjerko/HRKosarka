@page "/login"

<PageTitle>Login - Basketball Management</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="form-page-container">
    <MudPaper Class="form-card">
        <div class="form-header">
            <MudAvatar Size="Size.Large" Class="form-icon-avatar">
                <MudIcon Icon="@Icons.Material.Filled.SportsBasketball" Size="Size.Large" />
            </MudAvatar>

            <MudText Typo="Typo.h4" Class="form-title">Basketball Management</MudText>
            <MudText Typo="Typo.h6" Class="form-subtitle">Sign in to your account</MudText>
        </div>

        @if (!string.IsNullOrEmpty(Message))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">@Message</MudAlert>
        }

        <EditForm Model="@Model" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <MudGrid Spacing="3">
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Email"
                                  Label="Email or Username"
                                  Variant="Variant.Text"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.AccountCircle"
                                  Required="true"
                                  For="@(() => Model.Email)" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Password"
                                  Label="Password"
                                  Variant="Variant.Text"
                                  InputType="@_passwordInput"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@_passwordInputIcon"
                                  OnAdornmentClick="TogglePasswordVisibility"
                                  AdornmentAriaLabel="Show Password"
                                  Required="true"
                                  For="@(() => Model.Password)" />
                </MudItem>

                <MudItem xs="12">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               FullWidth="true"
                               StartIcon="@Icons.Material.Filled.Login"
                               Disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <MudText Class="ms-2">Signing In...</MudText>
                        }
                        else
                        {
                            <MudText>Sign In</MudText>
                        }
                    </MudButton>
                </MudItem>

                <MudItem xs="12" Class="text-center">
                    <MudDivider Class="my-4">
                        <MudText Typo="Typo.body2" Color="Color.Secondary">or</MudText>
                    </MudDivider>

                    <MudText Typo="Typo.body2">
                        Don't have an account?
                        <MudLink Href="/register" Color="Color.Primary">
                            <strong>Sign up here</strong>
                        </MudLink>
                    </MudText>
                </MudItem>
            </MudGrid>
        </EditForm>
    </MudPaper>
</MudContainer>
