@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<MudNavMenu Class="enhanced-nav-menu">
    <MudNavLink Href="/"
                Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.Dashboard"
                Class="nav-item nav-item-primary">
        <MudText Typo="Typo.body2">Dashboard</MudText>
    </MudNavLink>

    <MudNavLink Href="/clubs"
                Icon="@Icons.Material.Filled.Groups"
                Class="nav-item nav-item-secondary">
        <MudText Typo="Typo.body2">Clubs</MudText>
    </MudNavLink>

    <MudDivider Class="nav-divider" />

    <AuthorizeView Roles="Administrator">
        <MudNavLink Href="/admin"
                    Icon="@Icons.Material.Filled.AdminPanelSettings"
                    Class="nav-item nav-item-admin">
            <MudText Typo="Typo.body2">Administration</MudText>
        </MudNavLink>
    </AuthorizeView>
</MudNavMenu>
