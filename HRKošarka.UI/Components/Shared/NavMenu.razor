@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<MudNavMenu Class="enhanced-nav-menu">
    <MudNavLink Href="/"
                Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.Dashboard"
                Class="nav-item">
        <MudText Typo="Typo.body2">Dashboard</MudText>
    </MudNavLink>

    <MudNavLink Href="/clubs"
                Icon="@Icons.Material.Filled.Groups"
                Class="nav-item">
        <MudText Typo="Typo.body2">Clubs</MudText>
    </MudNavLink>

    <MudNavLink Href="/teams"
                Icon="@Icons.Material.Filled.PeopleAlt"
                Class="nav-item">
        <MudText Typo="Typo.body2">Teams</MudText>
    </MudNavLink>

    <MudNavLink Href="/seasons"
                Icon="@Icons.Material.Filled.CalendarMonth"
                Class="nav-item">
        <MudText Typo="Typo.body2">Seasons</MudText>
    </MudNavLink>


    <MudDivider Class="nav-divider" />

    <AuthorizeView Roles="Administrator">
        <Authorized>
            <MudNavGroup Icon="@Icons.Material.Filled.AdminPanelSettings"
                         Title="Administration"
                         Class="nav-item">

                <MudNavGroup Icon="@Icons.Material.Filled.Group"
                             Title="User management"
                             Class="nav-item">
                    <MudNavLink Href="/admin/users"
                                Icon="@Icons.Material.Filled.ListAlt">
                        <MudText Typo="Typo.body2">Active users</MudText>
                    </MudNavLink>
                    <MudNavLink Href="/admin/users/inactive"
                                Icon="@Icons.Material.Filled.LockPerson">
                        <MudText Typo="Typo.body2">Inactive users</MudText>
                    </MudNavLink>
                </MudNavGroup>

                <MudNavLink Href="/seasons"
                            Icon="@Icons.Material.Filled.CalendarMonth">
                    <MudText Typo="Typo.body2">Seasons (manage)</MudText>
                </MudNavLink>

                <MudNavLink Href="/admin/settings"
                            Icon="@Icons.Material.Filled.Settings">
                    <MudText Typo="Typo.body2">System settings</MudText>
                </MudNavLink>

            </MudNavGroup>
        </Authorized>
    </AuthorizeView>

</MudNavMenu>
