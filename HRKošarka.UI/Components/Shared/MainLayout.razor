@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

<MudThemeProvider @ref="@_mudThemeProvider" Theme="@_currentTheme" @bind-IsDarkMode="@_isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Class="custom-appbar" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="DrawerToggle"
                       Class="menu-button"
                       Size="Size.Medium" />

        <MudText Typo="Typo.h6" Class="app-title ml-3">HRKošarka</MudText>
        <MudSpacer />

        <AuthorizeView>
            <Authorized Context="authContext">
                <MudButton Variant="Variant.Text"
                           Color="Color.Inherit"
                           StartIcon="@Icons.Material.Filled.Logout"
                           OnClick="@(() => NavigationManager.NavigateTo("/logout"))"
                           Class="auth-button">
                    Logout
                </MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Href="/login"
                           Variant="Variant.Text"
                           Color="Color.Inherit"
                           StartIcon="@Icons.Material.Filled.Login"
                           Class="auth-button mr-3">
                    Login
                </MudButton>
                <MudButton Href="/register"
                           Variant="Variant.Text"
                           Color="Color.Inherit"
                           StartIcon="@Icons.Material.Filled.PersonAdd"
                           Class="auth-button">
                    Register
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="1"
               Variant="DrawerVariant.Mini"
               OpenMiniOnHover="true"
               Class="custom-drawer">
        <MudDrawerHeader Class="custom-drawer-header">
            <div class="drawer-logo">
                <MudIcon Icon="@Icons.Material.Filled.SportsBasketball"
                         Class="logo-icon" />
                <MudText Typo="Typo.h6" Class="drawer-title">HRKošarka</MudText>
            </div>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent Class="custom-main-content">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="main-container">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
